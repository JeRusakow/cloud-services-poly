<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Stories</title>
    <style>
        body {
            background-color: #E5E5E5;
        }
        .upper-bar {
            position: fixed;
            width: 100%;
            height: 205px;
            top: 0;
            background-color: whitesmoke;
        }
        .story-form {
        }
        .content-list {
            width: 50em;
            overflow-y: auto;
            margin-top: 205px;
        }
        .username-cell {
            font-style: normal;
            font-weight: bold;
        }
        .timestamp-cell {
            font-style: italic;
            font-weight: lighter;
        }
        .story-box {
            width: inherit;
            margin-left: 10px;
        }
        .story-box-outer {
            width: inherit;
            margin-bottom: 10px;
            margin-top: 10px;
            background-color: whitesmoke;
        }
        .left-col {
            width: 40%;
        }
        .mid-col {
            width: 35%;
        }
        .right-col {
            width: 25%;
        }
        #submit-button {
            alignment: right;
        }
        .header {
            margin-left: 2px;
        }
    </style>
</head>
<body>
<div>
    <div class="upper-bar">

        <div id="main-header">
            <h2 class="header">Story list</h2>
        </div>

        <div class="story-form">
            <h4 class="header">Post your message</h4>
            <form method="post">
                <table>
                    <tr>
                        <td class="left-col">
                            <input type="text" name="username" placeholder="Your nickname" />
                        </td>
                        <td class="mid-col"></td>
                        <td class="right-col"></td>
                    </tr>
                    <tr>
                        <td colspan="3">
                        <textarea name="story" placeholder="Your text" maxlength="255" cols="60"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="left-col"></td>
                        <td class="mid-col"></td>
                        <td class="right-col">
                            <button type="submit" id="submit-button">Post!</button>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>



    <div class="content-list">

        {{#stories}}
            <div class="story-box-outer">
                <div class="story-box">
                    <table>
                        <tr>
                            <td class="left-col">
                                <span class="username-cell">{{username}}</span>
                            </td>
                            <td class="mid-col"></td>
                            <td class="right-col"></td>
                        </tr>
                        <tr>
                            <td class="left-col" colspan="3">
                                <span class="story-cell">{{story}}</span>
                            </td>
                            <td class="mid-col"></td>
                            <td class="right-col"></td>
                        </tr>
                        <tr>
                            <td class="left-col"></td>
                            <td class="mid-col"></td>
                            <td class="right-col">
                                <span class="timestamp-cell">{{timestamp}}</span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        {{/stories}}

    </div>
</div>



</body>
</html>